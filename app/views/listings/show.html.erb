<h1> <%= @listing.year%> <%= @listing.car.make %> <%= @listing.car.model %> </h1>

<% @images.each do |image| %>
    <%= cl_image_tag image.key , crop:'scale', :background=>"white", :width=>600, cloud_name: ENV['CLOUDINARY_CLOUD_NAME'] %>
<%end%>
<section class="mt-3">
<h3>$<%= @listing.price / 100%> </h3>

<h3 class="mt-3">Description</h3>

<%= @listing.description %>

<h3 class="mt-3">Colour</h3>

<%= @listing.color.capitalize %>

<h3 class="mt-3">Modifications</h3>

<% @mod_types.each do |type| %>
    <%if return_mods(type)[0].name != ""%>
        <h4 class="mt-3"> <%=type.capitalize%> </h4>
        <% mods = return_mods(type) %> 
        <ul class="list-group w-25 p-3">
        <%mods.each do |mod|%>
            <li class="list-group-item"> <%= mod.name.capitalize %>  </li>
        <% end %>
        </ul>
    <% end %>
<% end %>

<h3 class="mt-3">Contact Seller</h3>

<%= @listing.profile.first_name %> <%= @listing.profile.last_name %>, <%= @listing.profile.user.email %>
</section>

<% if policy(@listing).edit_or_destroy? || @profile_id == @listing.profile.id %>
<div class="btn-toolbar mb-1" role="toolbar" aria-label="Toolbar with button groups">
<%= link_to "Edit", edit_listing_path, class:"btn btn-warning" %>
<%= button_to('Delete', @listing, method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete your listing?" }}, class: "btn btn-danger ms-2") %>
</div>
<% end %>